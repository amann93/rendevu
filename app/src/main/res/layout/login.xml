<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/construct" >

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email_id2"
        android:layout_alignRight="@+id/email_id2"
        android:layout_centerVertical="true"
        android:addStatesFromChildren="true"
        android:baselineAligned="false"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/show_hide2"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rl"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:background="@drawable/show" />

    </RelativeLayout>

    <EditText
        android:id="@+id/email_id2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="Email"
        android:inputType="textPersonName"
        android:maxLength="25"
        android:textColor="?attr/colorAccent"
        android:textColorHint="?attr/colorAccent"
        android:textSize="19sp">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/signin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="53dp"
        android:background="#0700"
        android:text="Enter login info"
        android:textColor="#DAA520"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/rl"
        android:layout_alignStart="@+id/password2"
        android:layout_below="@+id/password2"
        android:layout_marginTop="24dp"
        android:background="@color/cardview_shadow_start_color"
        android:onClick="action"
        android:text="LOGIN"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/password2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/rl"
        android:layout_below="@+id/email_id2"
        android:background="@null"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLength="40"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="?attr/colorAccent"
        android:textColorHint="?attr/colorAccent" />

    <Button
        android:id="@+id/forgotPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnLogin"
        android:layout_alignStart="@+id/btnLogin"
        android:layout_below="@+id/btnLogin"
        android:layout_marginTop="31dp"
        android:background="@android:color/transparent"
        android:text="Forgot Password?"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#7aff73"
        android:textSize="12sp" />

    <Button
        android:id="@+id/backRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/forgotPass"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/forgotPass"
        android:background="@android:color/transparent"
        android:text="Need an account? Sign up here!"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/holo_blue_bright" />

</RelativeLayout>