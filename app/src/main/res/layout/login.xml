<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_home">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/cast_expanded_controller_actionbar_bg_gradient_light" />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="222dp"
        android:layout_height="40dp"
        android:layout_below="@+id/email_id2"
        android:layout_centerHorizontal="true"
        android:addStatesFromChildren="true"
        android:baselineAligned="false"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/show_hide2"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/show"
            android:foreground="@color/cast_intro_overlay_background_color"
            android:foregroundTint="@android:color/background_dark" />

    </RelativeLayout>

    <EditText
        android:id="@+id/email_id2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="117dp"
        android:ems="10"
        android:fontFamily="@font/fjord_one"
        android:hint="Email"
        android:inputType="textPersonName"
        android:maxLength="25"
        android:textColor="?attr/colorAccent"
        android:textColorHint="?attr/colorAccent"
        android:textSize="19sp">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/signin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#0700"
        android:fontFamily="@font/fjord_one"
        android:text="Please Login"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/cast_expanded_controller_bg_gradient_light"
        android:fontFamily="@font/fjord_one"
        android:onClick="action"
        android:text="LOGIN"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/password2"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_alignStart="@+id/email_id2"
        android:layout_alignTop="@+id/rl"
        android:background="@null"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/fjord_one"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLength="40"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="?attr/colorAccent"
        android:textColorHint="?attr/colorAccent"
        android:textSize="19sp" />

    <Button
        android:id="@+id/forgotPass"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:text="Forgot Password?"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#7aff73"
        android:textSize="14sp" />

    <Button
        android:id="@+id/backRegister"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:text="Need an account? Sign up here!"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/holo_blue_bright" />

</RelativeLayout>